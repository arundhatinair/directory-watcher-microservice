package com.file.watcher.listener;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.io.IOException;
import java.util.Set;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.boot.devtools.filewatch.ChangedFile;
import org.springframework.boot.devtools.filewatch.ChangedFiles;
import org.springframework.boot.devtools.filewatch.FileChangeListener;

public class CsvFileListener implements FileChangeListener {

    Logger log = LoggerFactory.getLogger(CsvFileListener.class);

    @Override
    public void onChange(Set<ChangedFiles> changeSet) {
        for (ChangedFiles files : changeSet) {
            for (ChangedFile file : files) {
                File changedFile = file.getFile();

                log.info("Change Type: {}", file.getType());
                log.info("Changed File: {}", changedFile.getAbsolutePath());
                
 
                    handleCsv(changedFile);  
                }
            }
        }
   

    private void handleCsv(File file) {
        log.info("Reading CSV file: {}", file.getName());
        try (BufferedReader reader = new BufferedReader(new FileReader(file))) {
            reader.readLine(); // Skip header
            String line;
            while ((line = reader.readLine()) != null) {
                String[] data = line.split(",");
                System.out.println("Row: " + String.join(" | ", data));
            }
        } catch (IOException e) {
            log.error("Error reading file: {}", file.getAbsolutePath(), e);
        }
    }
}
